<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#CDA412"
    tools:context=".CategoryActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:text="@string/category"
        android:textStyle="bold"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/on_sale_category_btn"
        android:layout_width="310dp"
        android:layout_height="74dp"
        android:background="@drawable/button_transparent"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="@string/on_sale_category"/>

    <Button
        android:id="@+id/office_category_btn"
        android:layout_width="310dp"
        android:layout_height="74dp"
        android:background="@drawable/button_transparent"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:text="@string/office_category"/>

    <Button
        android:id="@+id/gaming_category_btn"
        android:layout_width="310dp"
        android:layout_height="74dp"
        android:background="@drawable/button_transparent"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="@string/gaming_category"/>

    <Button
        android:id="@+id/home_category_btn"
        android:layout_width="310dp"
        android:layout_height="74dp"
        android:background="@drawable/button_transparent"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="@string/home_category"/>

    <Button
        android:id="@+id/out_doors_category_btn"
        android:layout_width="310dp"
        android:layout_height="74dp"
        android:background="@drawable/button_transparent"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="@string/out_door_category"/>

</LinearLayout>